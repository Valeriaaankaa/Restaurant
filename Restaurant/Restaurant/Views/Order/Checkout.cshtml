@using Data.Entities
@model OrderViewModel

<h2 class="col-md-8">Check out now</h2>
<p class="col-md-8">Please enter your details, and we'll ship your goods right away!</p>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Checkout" method="post">
    <div class="form-group controls col-md-8">
        <label>First name:</label><input asp-for="FirstName" class="form-control" width="200"/>
    </div>
    <div class="form-group controls col-md-8">
        <label>Last name:</label><input asp-for="LastName" class="form-control" width="200"/>
    </div>
    <div class="form-group controls col-md-8">
        <label>Phone number:</label><input asp-for="LastName" class="form-control" width="200"/>
    </div>
    <div class="form-group controls col-md-8">
        <label>Address:</label><input asp-for="Address" class="form-control" width="200"/>
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Complete Order" />
    </div>
    @User.
</form>