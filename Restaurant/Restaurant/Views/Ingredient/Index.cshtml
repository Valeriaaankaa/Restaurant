@model List<Data.Entities.Ingredient>

@{
    ViewData["Title"] = "Stock";
}

<link rel="stylesheet" href="~/css/ingredient.css">      
<h1 align="center">Ingredients</h1>

<div class="wrapper">
    <div id="formContent">
        <form asp-controller="Ingredient" asp-action="Index">
        Name: <input type="text" name="SearchString" />
        <input type="submit" class="fadeIn" value="Filter" />
    <!--  <div class="form-group d-flex justify-content-center">
            <a asp-controller="Ingredient" asp-action="Create" class="btn btn-lg btn-warning p-2">Create Ingredient</a>
        </div>-->
</form>
 <a asp-controller="Ingredient" asp-action="Create" class="btn btn-outline-info">Create Ingredient</a>
</div>
</div>
<div class="table-margin">
    <table class="table table-hover" id="table-size">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Ingredient group</th>
            <th scope="col">Import Date</th>
            <th scope="col">Expiration Date</th>
            <th scope="col">Price</th>
            <th scope="col">Amount</th>
            <th scope="col">Measurement</th>
             <th scope="col">Option</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var ingred in Model)
        {
            <tr>
                <td>@ingred.Id</td>
                <td>@ingred.Name</td>
                <td>@ingred.IngredientGroup</td>
                <td>@ingred.ImportDate</td>
                <td>@ingred.ExpirationDate</td>
                <td>@ingred.Price</td>
                @if(@ingred.IngredientMeasurement.ToString()=="Liter" && @ingred.Amount<3)
                {
                        <td class="table-danger">@ingred.Amount</td>
                    }
                    else if (@ingred.IngredientMeasurement.ToString()=="Kilogram" && @ingred.Amount<5)
                    {
                        <td class="table-danger">@ingred.Amount</td>
                    }
                    else if (@ingred.IngredientMeasurement.ToString()=="Package" && @ingred.Amount<10)
                    {
                        <td class="table-danger">@ingred.Amount</td>
                    }
                    else if (@ingred.IngredientMeasurement.ToString()=="Piece" && @ingred.Amount<7)
                    {
                        <td class="table-danger">@ingred.Amount</td>
                    }

                    else
                    {
                         <td>@ingred.Amount</td>
                    }
                    <td>@ingred.IngredientMeasurement</td>
                    <td>
                        <div role="group" class="w-60 btn-group">
                            <a asp-controller="Ingredient" asp-action="Edit" asp-route-id="@ingred.Id" class=" btn btn-sm btn-primary"><i class="bi bi-pencil-square"></i>Edit</a>&nbsp;                            
                            @Html.ActionLink("Delete",
                                "Delete", new { id = ingred.Id },
                                    new { onclick = "return confirm('Do you really want to delete the tag " + @ingred.Name + "?')" , @class ="btn btn-sm btn-danger"})
                        </div>
                    </td>
            </tr>
        }
    </tbody>
	</table>
</div>