@using System.Collections;
@using Data.Entities;
@using Business.Models

@model DishModel


@{
var message = TempData["successmessage"] ?? string.Empty;
}



@if(@Model != null)
{
    <div class="container shadow p-5">
        @if(@Model.Name != null)
                {
                    <div class="form-group d-flex justify-content-center">        
                            <h2>Edit @Model.Name</h2>
                    </div>

                    <div class="form-group d-flex justify-content-center">                
                         <h2 class="text-success" >@message</h2>      
                    </div>
                }

        <form method="post">
            <div asp-validation-summary="All"></div>      
        
            <div class="form-row">
                <input type="hidden" asp-for="Id" />
                <div class="form-group col-md-6">
                    <label asp-for="Name">Dish Name</label>
                    <input type="text" class="form-control mb-3" asp-for="Name" placeholder="Enter Name">
                    <span asp-validation-for="Name" class=" alert-danger"></span>
                </div>      
                <div class="form-group col-md-6">
                    <label asp-for="Price">Price</label>
                    <input type="text" class="form-control mb-3" asp-for="Price" placeholder="Enter Price">
                    <span asp-validation-for="Price" class=" alert-danger"></span>
                </div>
            </div>

             <div class="form-row"> 
                                               
                        <div class="form-group col-md-9 mb-3">                            

                        <div class="form-row">
                                <label asp-for="ImgPath">ImgPath</label>
                                <input type="text" class="form-control" asp-for="ImgPath">
                                <span asp-validation-for="ImgPath" class=" alert-danger"></span>
                            </div> 
                            <div class="form-row">                   
                                <label asp-for="Description">Description</label>
                                <input type="text" class="form-control" asp-for="Description">   
                                <span asp-validation-for="Description" class=" alert-danger"></span>
                            </div>  
                            <div class="form-group">
                                <label asp-for="DishGroup" class="control-label"></label>
                                <select asp-for="DishGroup" 
                                        class="form-control" 
                                        asp-items="Html.GetEnumSelectList<DishGroup>()">
                                    <option>Select type ...</option>
                                </select>
                                <span asp-validation-for="DishGroup" class="text-danger"></span>
                            </div>

                       </div>
                
               
                  
                
               
                    <div class="form-group col-md-3 mb-3">
                        <div class="text-center">
                             @if(@Model.ImgPath != null)
                              {
                              <img src="@Model.ImgPath.ToString()" class="img-fluid mb-3" alt="@Model.Name">
                              }
                              else
                              {
                                <img src="" class="img-fluid mb-3" alt="No image">
                              }
                        </div>
                    </div>
                
            </div>

            <div class="form-group d-flex justify-content-center">
                <button type="submit" class="btn btn-lg btn-primary p-2">
                    <i class="bi bi-file-plus-fill"></i>Update
                </button>
                <div>&nbsp;</div>
                <div>&nbsp;</div>
                <div>&nbsp;</div>
                <a asp-controller="Dish" asp-action="Details" class="btn btn-lg btn-warning p-2">Back To List</a>
            </div>
        </form>

    </div>
}
else
{
    <div>
        <h4 class="text-center">Oops, dish was not found :'(</h4>
    </div>
}