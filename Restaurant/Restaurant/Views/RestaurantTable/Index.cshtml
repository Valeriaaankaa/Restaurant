@model List<Data.Entities.RestaurantTable>

@{
    ViewData["Title"] = "Tables";
}


<h1 align="center">Tables</h1>

<div class="table-margin">
    <table class="table table-hover" id="table-size">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
             <th scope="col">Zone</th>
             <th scope="col">Reservate</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var table in Model)
        {
            <tr>
                <td>@table.Id</td>
                <td>@table.Name</td>
                <td>@table.Zone</td>
               <td><a class="btn btn-warning" asp-controller="RestCartTable" asp-action="addToCart" asp-route-id="@table.Id">Add</a></td>
            </tr>
        }
    </tbody>
	</table>
</div>