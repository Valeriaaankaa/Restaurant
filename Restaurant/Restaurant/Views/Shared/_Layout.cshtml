@using Microsoft.AspNetCore.Identity
@using Data.Entities

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="./css/scroll.css">      
    <link rel="shortcut icon" href="~/img/favicon.png" type="image/png">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,300;0,400;1,300&display=swap" rel="stylesheet">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">SuperPuperRest</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-item nav-link" href="@Url.Action("Index", "Home")">Main</a>
                    <a class="nav-item nav-link" href="@Url.Action("Index", "Dish")">Menu</a>            
                    <a class="nav-item nav-link" href="@Url.Action("Index", "RestaurantTable")">Reservation</a>   

                    @if (User.IsInRole("Administrator"))
                        {
                        <a class="nav-item nav-link" href="@Url.Action("Details", "Dish")">Dish Details</a>
                        <a class="nav-item nav-link" href="@Url.Action("Details", "DishComposition")">Dish Composition</a>
                        <a class="nav-item nav-link" href="@Url.Action("", "User")">Users</a>
                        }

                    @if (User.IsInRole("Administrator") || (User.IsInRole("Manager")))
                        {
                            <a class="nav-item nav-link" href="@Url.Action("Index", "Ingredient")">Ingredients</a>
                        }
                </div>
            </div>
            <partial name="_LoginPartial" />
            <a class="nav-item nav-link" href="@Url.Action("Index", "Cart")"><img src="~/img/basket.png" alt="Basket"/></a>
        </nav>        
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Restaurant - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/scroll.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
