@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
    <link rel="stylesheet" href="~/css/register.css">      


<div class="wrapper fadeInDown">
    <div id="formContent">
      <!-- Tabs Titles -->
     <!-- <h2 class="active"> Register </h2>-->
           <div class="parent">
          <h2 class="inactive">Register</h2>
          <h2 class="active"><a class="active" href="Login" style="color: #0d0d0d;text-decoration:none;font-weight: 600;">Login</a></h2>
      </div>
  
      <!-- Register Form -->
      <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

      <input type="text" asp-for="Input.FirstName" class="fadeIn second" autocomplete="firstname" aria-required="true" placeholder="First name" />
      <br><span asp-validation-for="Input.FirstName" class="text-danger"></span>

       <input type="text" asp-for="Input.LastName" class="fadeIn second" autocomplete="lastname" aria-required="true"  placeholder="Last name"/>
       <br/><span asp-validation-for="Input.LastName" class="text-danger"></span>
                                  

        <input type="text" asp-for="Input.Email" class="fadeIn second" autocomplete="email" aria-required="true"  placeholder="Email"/>
        <br/><span asp-validation-for="Input.Email" class="text-danger"></span>

        <input type="password" asp-for="Input.Password" class="fadeIn second" autocomplete="new-password" aria-required="true" placeholder="Password"/>
        <br/><span asp-validation-for="Input.Password" class="text-danger"></span>
        
        <input type="password" asp-for="Input.ConfirmPassword" class="fadeIn second" autocomplete="new-password" aria-required="true" placeholder="Confirm password"/>
        <br/><span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

        <br/><input id="registerSubmit" type="submit" class="fadeIn fourth" value="Register"/>
      </form>
  
    </div>
  </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
